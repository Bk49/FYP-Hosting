using AND to query

const users = await User.find({
                    $and: [
                        { email: { $regex: email } },
                        { isDeleted: false }
                    ]
                }).select("-password -__v -isDeleted");


// TODO: DELETED num param documents and chg to nested path

const mongoose = require("mongoose");
const { Schema } = mongoose;

const NumParamSchema = new Schema({
    min: {
        type: Number,
        required: "Minimum value required"
    },
    max: {
        type: Number,
        required: "Maximum value required"
    }
});

const NumericalParam = mongoose.model("NumericalParam", NumParamSchema);

const numParamModel = {
    NumParamSchema
}

module.exports = numParamModel;